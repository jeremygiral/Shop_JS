  {{user.adresse_livraisson}}<br>
  <dl>
    <dt>Nom</dt>
    <dd>{{user.prenom}} {{user.nom}}</dd>
    <dt>Courriel</dt>
    <dd>{{user.email}}</dd>
  </dl>
</dd>
</dl>
<dl class="bloc">
<dt>Description de service:</dt>
<dd>Intelligence Artificielle</dd>
</dl>
</section>
<table>
<thead>
<tr>
  <th>Produit</th>
  <th>Entreprise</th>
  <th>Quantité</th>
  <th>Prix Hors Taxes</th>
  <th>Prix TTC</th>
</tr>
</thead>
<tbody>
{{#each panier.items}}
<tr>
  <td>{{item.title}}</td>
  <td>{{item.entreprise}}</td>
  <td>{{qty}}</td>
  <td>{{priceHT}} €</td>
  <td>{{price}} €</td>
</tr>
{{/each}}
</tbody>
<tfoot>
<tr>
  <td colspan="2"><strong>Total</strong></td>
  <td>{{panier.totalQty}}</td>
