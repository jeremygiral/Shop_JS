{{# if products}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{#each products}}
      <li class="list-group-item">
        <span class="badge pull-left">{{this.qty}}</span>
        <strong> {{this.item.title}}</strong>
        <span class="label label-success">{{this.price}} €</span>
        <div class="btn-group">
          <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="/panier/reduce/{{this.item._id}}">Enlever 1 unité du panier</a></li>
            <li><a href="/panier/remove/{{this.item._id}}">Enlever tout du panier</a></li>
          </ul>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong class="money">Total : {{totalPrice}} €</strong>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/order/details"<button type="button" class="btn btn-success">Commander</button></a>
  </div>
  <a href="/order/imprimer/D&000"><button type="button" class="btn btn-success">Devis</button></a>
</div>
</br>
</br>
<div  id="Table" style="display: none;" class="impression">
<div class="panel panel-default">

  <div class="panel-heading"></div>
  <table class="table">
    <tr><th colspan="4" style='text-align:center;'>DEVIS</th></tr>
  <tr>
    <th>Produit</th>
    <th>Quantité</th>
    <th>Prix Hors Taxe</th>
    <th>Prix TTC</th>
  </tr>
  {{#each products}}
  <tr>
    <td>{{this.item.title}}</td>
    <td> {{this.qty}}</td>
    <td class="currency"> {{this.priceHT}} €</td>
    <td class="currency"> {{this.price}} €</td>
  </tr>
  {{/each}}
  <tr>
    <td><strong>Total</strong></td>
    <td><strong>{{totalQty}}</strong></td>
    <td><strong class="currency">{{ totalPriceHT}} €</strong></td>
    <td><strong class="currency">{{ totalPrice}} €</strong></td>
</table>
</div>
</div>

{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>Votre panier est vide</h2>
  </div>
</div>
{{/if}}

<script type="text/javascript">
function imprimer_page(id){
  divToPrint = getElementById(id);
  divToPrint.print();
}
function printDiv(divName) {
  var printContents = document.getElementById(divName).innerHTML;
  var originalContents = document.body.innerHTML;

  document.body.innerHTML = printContents;

  window.print();

  document.body.innerHTML = originalContents;
}
</script>
